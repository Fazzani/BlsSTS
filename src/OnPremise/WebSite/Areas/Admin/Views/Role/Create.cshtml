@using Thinktecture.IdentityServer.Web.Areas.Admin.App_LocalResources.Role
@model RoleInputModel
@using (Html.BeginForm("Create", "Role"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(Create_cshtml.ErrorCreatingRole)

    <fieldset class="editor small">
        <legend>@Create_cshtml.CreateRole</legend>

        @Html.EditorForModel()

        <div class="buttons">
            <button class="btn btn-default" type="submit">@Create_cshtml.Create</button>
            <button class="btn btn-default" type="reset">@Create_cshtml.Cancel</button>
        </div>
    </fieldset>
}